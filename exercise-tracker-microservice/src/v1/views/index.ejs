<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Exercise Tracker</title>
    <!-- CSS BOOTSTRAP -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <header>
        <nav class="navbar navbar-light bg-light">
          <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">Exercise Tracker</span>
          </div>
        </nav>
      </header>

      <!-- forms container -->
      <!-- create new user -->
      <div class="row gap-0">
        <form action="/api/v1/users" method="post" class="card col-md-6 my-2">
          <h3 class="card-header">Create a New User</h3>
          <div class="card-body">
            <label for="username" class="form-label">User Name</label>
            <input
              id="uname"
              type="text"
              name="username"
              placeholder="username"
              required=""
              class="form-control mb-3"
            />
            <input
              class="btn btn-primary col-12"
              type="submit"
              value="Submit"
            />
          </div>
        </form>

        <!-- add exercises -->
        <form id="exercise-form" method="post" class="card col-md-6 my-2">
          <h3 class="card-header">Add exercises</h3>

          <div class="card-body">

            <div class="mb-3">
              <label for="userId" class="form-label"">User ID</label>
              <input id="uid" type="text" name=":_id" placeholder="ID" class="form-control" required=""/>
            </div>
  
            <div class="mb-3">
              <label for="description" class="form-label">Description<span class="text-danger">*</span></label>
              <input
                id="desc"
                type="text"
                name="description"
                placeholder="description"
                required=""
                class="form-control"
              />
            </div>

            <div class="mb-3">
              <label for="duration" class="form-label">Duration<span class="text-danger">*</span></label>
              <input
                id="dur"
                type="text"
                name="duration"
                placeholder="duration (mins.)"
                class="form-control"
                required=""
              />
            </div>

            <div class="mb-3">
              <label for="date" class="form-label">Date</label>
              <input
                id="date"
                type="text"
                name="date"
                placeholder="date (yyyy-mm-dd)"
                class="form-control"
              />
            </div>

            <input type="submit" value="Submit" class="btn btn-primary col-12" />

          </div>
        </form>
      </div>
    </div>

    <script>
      const exerciseForm = document.getElementById("exercise-form");

exerciseForm.addEventListener("submit", () => {
  const userId = document.getElementById("uid").value;
  exerciseForm.action = `/api/v1/users/${userId}/exercises`;

  exerciseForm.submit();
});
    </script>
  </body>
</html>
